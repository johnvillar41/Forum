@model Forum.DataModels.ForumModel

<div class="container text-dark">
    <div class="card p-5">
        <div class="col-12">
            <form method="post" asp-action="SubmitForum" asp-controller="Forum" enctype="multipart/form-data">
                <div class="row">
                    <h1>Create Forum Topic</h1>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Title"></label>
                    <input cols="10" class="form-control" asp-for="@Model.Title/>
                </div>
                <div class=" form-group">
                    <label asp-for="@Model.Description"></label>
                    <textarea rows="10" class="form-control" asp-for="@Model.Description"></textarea>
                </div>
                <div class="form-group mt-3">
                    <label>Upload Image Icon</label>
                    <input type="file" class="form-control-file btn btn-success" value="Choose Icon" asp-for="@Model.FileImage">
                </div>
                <hr />
                <input type="submit" value="Create Forum" class="btn btn-outline-success" />
            </form>
        </div>
    </div>
</div>
