@model IEnumerable<Forum.ViewModels.PostViewModel>

<div class="container">
    <div class="col-6">
        @foreach(var post in Model)
            {
                <div class="row">
                    <div class="card">                        
                        <p>@post.Fullname</p>
                        <p>@post.Post.Content</p>
                        <p>@post.Post.PostType</p>
                    </div>
                </div>
            }
    </div>
</div>