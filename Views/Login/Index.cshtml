@model Forum.DataModels.UserModel
<div class="container">
    <div class="card">
        <form method="post" asp-controller="Login" asp-action="Login">
            <div class="row">
                <input asp-for="Username" placeholder="Enter Username" />
            </div>
            <div class="row">
                <input asp-for="Password" placeholder="Enter Password" />
            </div>
            <div class="row">
                <input type="submit" value="submit" />
            </div>
        </form>
    </div>
</div>